<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="./styles/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
    />

    <title>Cool Season Client</title>
  </head>
  <body>
    <%- include('partials/navbar') %>

    <!-- Your main content for this page -->
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-3">
          <div
            class="d-flex flex-column flex-shrink-0 p-3 text-bg-white"
            style="width: 280px"
          >
            <a
              href="/"
              class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none"
            >
              <svg class="bi pe-none me-2" width="40" height="32">
                <use xlink:href="#bootstrap"></use>
              </svg>
              <span class="fs-4">Sidebar</span>
            </a>
            <hr />
            <ul class="nav nav-pills flex-column mb-auto">
              <li class="nav-item">
                <a href="/" class="nav-link text-dark" aria-current="page">
                  <svg class="bi pe-none me-2" width="16" height="16">
                    <use xlink:href="#home"></use>
                  </svg>
                  Estimate
                </a>
              </li>
              <li>
                <a href="/invoice" class="nav-link text-dark">
                  <svg class="bi pe-none me-2" width="16" height="16">
                    <use xlink:href="#speedometer2"></use>
                  </svg>
                  Invoice
                </a>
              </li>
              <li>
                <a href="/client" class="nav-link active">
                  <svg class="bi pe-none me-2" width="16" height="16">
                    <use xlink:href="#table"></use>
                  </svg>
                  Client
                </a>
              </li>
              <li>
                <a href="/item" class="nav-link text-dark">
                  <svg class="bi pe-none me-2" width="16" height="16">
                    <use xlink:href="#grid"></use>
                  </svg>
                  Items
                </a>
              </li>
              <li>
                <a href="/estimate" class="nav-link text-dark">
                  <svg class="bi pe-none me-2" width="16" height="16">
                    <use xlink:href="#people-circle"></use>
                  </svg>
                  New Estimate
                </a>
              </li>
            </ul>
            <hr />
            <div class="dropdown">
              <a
                href="#"
                class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <img
                  src="https://github.com/mdo.png"
                  alt=""
                  width="32"
                  height="32"
                  class="rounded-circle me-2"
                />
                <strong>mdo</strong>
              </a>
              <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                <li><a class="dropdown-item" href="#">New project...</a></li>
                <li><a class="dropdown-item" href="#">Settings</a></li>
                <li><a class="dropdown-item" href="#">Profile</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" href="#">Sign out</a></li>
              </ul>
            </div>
          </div>
        </div>

        <!-- CONTEUDO  AQUI -->

        <!-- Tabela à direita do sidebar -->
        <div class="col">
          <form class="d-flex" role="search">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search client by Name"
              aria-label="Search"
            />
            <!-- <button type="button" class="btn btn-outline-success">
            New Estimate
          </button> -->
          </form>
          <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <!-- item list -->

            <div
              class="card"
              style="height: 400px; width: 400px; overflow-y: scroll"
            >
              <!--  DISPLAY CLIENT TABLE -->

              <!--  DISPLAY CLIENT TABLE END-->
              <div class="card-header">CUSTOMERS</div>
              <ul class="list-group list-group-flush">
                <% clients.forEach(function(client) { %>
                <li class="list-group-item">
                  <i
                    data-bs-toggle="modal"
                    data-bs-target="#editFormModal"
                    data-name="<%= client.name %>"
                    data-phone="<%= client.phone_mobile %>"
                    data-email="<%= client.email %>"
                    data-phone2="<%= client.phone_other %>"
                    data-address="<%= client.address %>"
                    data-address2="<%= client.address2 %>"
                    data-city="<%= client.city %>"
                    data-zip="<%= client.zip_code %>"
                    data-state="<%= client.state %>"
                    data-note="<%= client.note %>"
                    class="fas fa-edit edit-client"
                    data-id="<%= client.id %>"
                  ></i>

                  <i
                    class="fas fa-trash-alt delete-client"
                    data-id="<%= client.id %>"
                  ></i>
                  <%= client.name %>
                </li>
                <% }); %>

                <!-- <li class="list-group-item">Alvaro matis</li>
                <li class="list-group-item">John wesley</li>
                <li class="list-group-item">Caio mendes</li>
                <li class="list-group-item">Bryce Trace</li>
                <li class="list-group-item">Billy Mich</li>
                <li class="list-group-item">Obama Latrel</li> -->
              </ul>
            </div>

            <!-- Div to Appear invoives-->
            <div class="collapse" id="collapseExample">
              <div class="card card-body">
                Some placeholder content for the collapse component. This panel
                is hidden by default but revealed when the user activates the
                relevant trigger.
              </div>
            </div>
            <!-- Buttons end-->
          </div>
          <table class="table">
            <!-- Conteúdo da Tabela 1 aqui -->
            <p>Conteúdo da Tabela 2 aqui</p>
          </table>
        </div>

        <!-- Tabela 2 à direita da primeira tabela -->
        <div class="col">
          <!-- Button ADD new ITEM-->
          <!-- Button ADD new ITEM-->
          <button
            type="button"
            class="btn btn-outline-success"
            data-bs-toggle="modal"
            data-bs-target="#exampleModal"
            data-bs-whatever="@mdo"
            style="
              width: 100px;
              height: 100px;
              font-size: 15px;
              border: 1px solid;
            "
          >
            ADD NEW CUSTOMER
          </button>

          <div
            class="modal fade"
            id="exampleModal"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">
                    ADD NEW CLIENT
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body">
                  <!-- Form HERE -->
                  <form class="row g-3" action="/add_client" method="post">
                    <h2 class="mb-3">Basic Information</h2>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="name">Name</label>
                        <!-- INPUT FORM-->
                        <!-- <input type="text" placeholder="Cliente Name" name="nameIp" /> -->
                        <input type="text" class="form-control" name="nameIp" />
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="phoneMobile">Phone (Mobile)</label>
                        <!-- INPUT FORM-->
                        <input
                          type="text"
                          class="form-control"
                          id="phoneMobile"
                          name="phoneMobile"
                        />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="email">Email Address</label>
                        <!-- INPUT FORM-->
                        <input
                          type="text"
                          class="form-control"
                          id="email"
                          name="email"
                        />
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="phoneOther">Phone (Other)</label>
                        <input
                          type="text"
                          class="form-control"
                          id="phoneOther"
                          name="phoneOther"
                        />
                      </div>
                    </div>

                    <h2 class="mt-4 mb-3">Billing Information</h2>

                    <div class="col-md-6">
                      <label for="address">Address</label>
                      <input
                        type="text"
                        class="form-control"
                        id="address"
                        name="address"
                      />
                    </div>
                    <div class="col-md-6">
                      <label for="address2">Address 2</label>
                      <input
                        type="text"
                        class="form-control"
                        id="address2"
                        name="address2"
                      />
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="city">City</label>
                        <input
                          type="text"
                          class="form-control"
                          id="city"
                          name="city"
                        />
                      </div>
                    </div>

                    <div class="col-md-3">
                      <label for="zip">Zip / Postal Code</label>
                      <input
                        type="text"
                        class="form-control"
                        id="zip"
                        name="zip"
                      />
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="state">State</label>
                        <input
                          type="text"
                          class="form-control"
                          id="state"
                          name="state"
                        />
                      </div>
                    </div>

                    <div class="mb-3">
                      <label for="privateNote" class="form-label"
                        >Private Note</label
                      >
                      <textarea
                        class="form-control"
                        name="privateNote"
                        id="privateNote"
                        rows="3"
                      ></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">
                      Submit
                    </button>
                  </form>
                  <!-- Form end HERE -->
                </div>
              </div>
            </div>
          </div>

          <!-- FORM TO HIDDEN AQUI-->
          <!-- EDIT FORM MODAL UPDATE-->

          <!-- EDIT FORM MODAL UPDATE-->
          <!-- EDIT FORM MODAL UPDATE-->

          <!-- EDIT FORM MODAL UPDATE-->

          <!-- EDIT FORM MODAL UPDATE -->

          <div
            class="modal fade"
            id="editFormModal"
            tabindex="-1"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">
                    EDIT CLIENT
                  </h1>
                  <button
                    type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"
                  ></button>
                </div>
                <div class="modal-body" id="editFormModal">
                  <!-- Form HERE -->
                  <form class="row g-3" action="/edit_client" method="post">
                    <h2 class="mb-3">Basic Information</h2>

                    <input
                      type="hidden"
                      name="clientId"
                      id="edit-form-clientId"
                      value=""
                    />
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="name">Name</label>
                        <!-- INPUT FORM-->
                        <!-- <input type="text" placeholder="Cliente Name" name="nameIp" /> -->
                        <input
                          type="text"
                          class="form-control"
                          name="nameIp"
                          id="edit-form-name"
                        />
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="phoneMobile">Phone (Mobile)</label>
                        <!-- INPUT FORM-->
                        <input
                          type="text"
                          class="form-control"
                          id="edit-form-phoneMobile"
                          name="phoneMobile"
                        />
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="email">Email Address</label>
                        <!-- INPUT FORM-->
                        <input
                          type="text"
                          class="form-control"
                          id="edit-form-email"
                          name="email"
                        />
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="phoneOther">Phone (Other)</label>
                        <input
                          type="text"
                          class="form-control"
                          id="edit-form-phoneOther"
                          name="phoneOther"
                        />
                      </div>
                    </div>

                    <h2 class="mt-4 mb-3">Billing Information</h2>

                    <div class="col-md-6">
                      <label for="address">Address</label>
                      <input
                        type="text"
                        class="form-control"
                        id="edit-form-address"
                        name="address"
                      />
                    </div>
                    <div class="col-md-6">
                      <label for="address2">Address 2</label>
                      <input
                        type="text"
                        class="form-control"
                        id="edit-form-address2"
                        name="address2"
                      />
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="city">City</label>
                        <input
                          type="text"
                          class="form-control"
                          id="edit-form-city"
                          name="city"
                        />
                      </div>
                    </div>

                    <div class="col-md-3">
                      <label for="zip">Zip / Postal Code</label>
                      <input
                        type="text"
                        class="form-control"
                        id="edit-form-zip"
                        name="zip"
                      />
                    </div>

                    <div class="col-md-6">
                      <div class="form-group">
                        <label for="state">State</label>
                        <input
                          type="text"
                          class="form-control"
                          id="edit-form-state"
                          name="state"
                        />
                      </div>
                    </div>

                    <div class="mb-3">
                      <label for="privateNote" class="form-label"
                        >Private Note</label
                      >
                      <textarea
                        class="form-control"
                        name="privateNote"
                        id="edit-form-privateNote"
                        rows="3"
                      ></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">
                      Edit Now
                    </button>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <!-- FORM TO HIDDEN AQUI-->

          <p>Conteúdo da Tabela 1 aqui</p>
        </div>
        <!-- CONTEUDO  AQUI -->
      </div>
    </div>

    <%- include('partials/footer') %>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/js/main.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
